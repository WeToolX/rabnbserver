<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 日志目录：运行目录下 logs -->
    <property name="LOG_PATH" value="logs"/>
    <!-- 日志格式：包含时间、线程、级别、标签（logger 名称）与正文 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS, Asia/Shanghai} [%thread] %-5level %logger{60} - %msg%n"/>

    <!-- 控制台日志（仅非生产环境输出） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 主日志文件：按天 + 10MB 滚动压缩 -->
    <appender name="ROLLING_APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 异步写入：避免日志压缩阻塞业务线程 -->
    <appender name="ASYNC_APP" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock>
        <appender-ref ref="ROLLING_APP"/>
    </appender>

    <!-- 标签层级：小标签继承大标签（通过 logger 名称层级实现） -->
    <logger name="com.ra.rabnbserver.controller" level="INFO"/>
    <logger name="com.ra.rabnbserver.controller.user" level="INFO"/>
    <logger name="com.ra.rabnbserver.controller.admin" level="INFO"/>
    <logger name="com.ra.rabnbserver.service" level="INFO"/>
    <!-- 异常重试框架调试日志（关闭 DEBUG 输出） -->
    <logger name="com.ra.rabnbserver.exception.Abnormal" level="INFO"/>
    <!-- 数据库日志（可按需要调整级别） -->
    <logger name="org.mybatis" level="INFO"/>
    <logger name="com.baomidou.mybatisplus" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- 非生产环境输出控制台 -->
    <springProfile name="!prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_APP"/>
        </root>
    </springProfile>

    <!-- 生产环境不输出控制台 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC_APP"/>
        </root>
    </springProfile>
</configuration>
